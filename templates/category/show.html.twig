{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h3>Category</h3>

    <div class="text-right form-group">
        <a class="btn btn-primary btn-xs" href="{{ path('category_edit', {'id': category.id}) }}"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
    </div>

    <table class="table table-striped table-bordered table-hover table-condensed">
        <tbody>
            <tr>
                <th width="50">ID</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th width="50">Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">Back to categories list</a>
{% endblock %}
