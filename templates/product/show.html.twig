{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h3>Product</h3>

    <div class="text-right form-group">
        <a class="btn btn-primary btn-xs" href="{{ path('product_edit', {'id': product.id}) }}"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
    </div>

    <table class="table table-striped table-bordered table-hover table-condensed">
        <tbody>
            <tr>
                <th width="50">ID</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th width="50">Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th width="50">Image</th>
                <td>
                    <img width="100" height="100" src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.name }}">
                </td>
            </tr>
            <tr>
                <th width="50">Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th width="50">Price</th>
                <td>${{ product.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">Back to products list</a>
{% endblock %}
